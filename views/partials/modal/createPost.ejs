<!-- Confirm Modal -->
<div class="modal" tabindex="-1" id="createPostModal">
    <div class="modal-dialog">
        <form method="post" action="/post/create" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex gap-3">
                        <img class="img-fluid card-img post-creator-img"
                            src="/public/avatar/avatar_<%=loggedInUser?.profileImage%>.png" alt="John Doe" />
                        <textarea class="form-control" name="postContent" minlength="5" maxlength="160"
                            required="required" placeholder="This a tweet..." id="newPost"
                            onkeyup="countPostLength(this,'current')"></textarea>
                    </div>
                    <div class="d-flex align-items-center justify-content-end">
                        <div id="post-count" class="mt-2">
                            <span id="current">0</span>
                            <span id="maximum">/ 160</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-9 me-auto">
                        <input class="form-control form-control-sm" id="postImage" type="file" name="image">
                        <small id="emailHelp" class="form-text text-muted">
                            <p class="mb-0">Max file size is 1 Mbyte.</p>
                            <p>Acceptable file formats are: jpg, jpeg, png and gif.</p>
                        </small>
                    </div>
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </div>
        </form>
    </div>
</div>